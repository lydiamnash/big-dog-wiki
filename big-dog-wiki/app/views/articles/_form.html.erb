<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => 'ckeditor' %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'ckeditor' %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


